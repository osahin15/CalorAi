<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_bottom_bg"
    tools:context=".view.BottomSetting">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icn_chevron_up"
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/arrow"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Profil Düzenle"
        android:id="@+id/ustText"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ustText"
        android:src="@drawable/selectimage"
        />


    <EditText
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/nameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/selectImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/surnameEditText"
        android:hint="İsim"
        android:autofillHints="İsim"
        android:inputType="text"
        android:maxLines="1"
        android:backgroundTint="@color/semiwhite"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />
    <EditText
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/surnameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/selectImage"
        app:layout_constraintStart_toEndOf="@+id/nameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Soyisim"
        android:autofillHints="Soyisim"
        android:inputType="text"
        android:maxLines="1"
        android:backgroundTint="@color/semiwhite"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    <LinearLayout
        android:padding="6dp"
        android:background="@color/boykilobg"
        android:id="@+id/boylinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Boy:" />
        <EditText
            android:backgroundTint="@color/semi_transparent"
            android:id="@+id/boyEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="180"
            android:inputType="number"
            android:autofillHints="180"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:padding="6dp"
        android:background="@color/boykilobg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        app:layout_constraintStart_toEndOf="@+id/boylinear"
        android:layout_marginStart="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Kilo:" />
        <EditText
            android:id="@+id/kiloEditText"
            android:backgroundTint="@color/semi_transparent"
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="80"
            android:textColor="@color/black"
            android:autofillHints="80"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:layout_marginStart="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/cinsiyetLinear"
        app:layout_constraintTop_toBottomOf="@+id/boylinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Cinsiyet:"/>
        <RadioGroup
            android:id="@+id/cinsiyetGroup"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/erkek"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erkek"/>
            <RadioButton
                android:id="@+id/kadin"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kadın"/>
        </RadioGroup>
    </LinearLayout>



    <Button
        android:id="@+id/btnKaydet"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        app:layout_constraintTop_toBottomOf="@+id/cinsiyetLinear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>